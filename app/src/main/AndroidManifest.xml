<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yishengma.inlearning">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.ClassRoomActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize|keyboardHidden"
            ></activity>
        <activity android:name=".ui.CourseSearchActivity" />
        <activity android:name=".ui.LessonTaskActivity" />
        <activity android:name=".ui.StudyReportActivity" />
        <activity android:name=".ui.NoteListActivity" />
        <activity android:name=".ui.ExamListActivity" />
        <activity android:name=".ui.ClassListActivity" />
        <activity android:name=".ui.HomePageActivity" />
        <activity android:name=".ui.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>