<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:background="@drawable/bg_item_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_speciality_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="计算机学与技术"
            android:textStyle="bold"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_short_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_speciality_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="简称：计科"
            android:textColor="@color/textBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_class_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_short_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="班级：6 个班级"
            android:textColor="@color/textBlack"
            android:textSize="14sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
