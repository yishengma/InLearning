<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_click">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_user_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/viewpage_guide_3" />

    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imv_user_image"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@+id/imv_user_image"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="问本阿斯科利大家分开了啊上课大家分开了酸辣看到肌肤阿斯顿可激发快乐阿迪书法考级阿里看到肌肤"
        android:textColor="@color/textBlack"
        android:textSize="16sp" />

    <TextView
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_user_image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"

        android:gravity="center"
        android:text="隋东风"
        android:textColor="@color/app_global_blue"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imv_content_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tv_post_title"
        android:layout_alignLeft="@+id/tv_post_title"
        android:layout_marginTop="5dp"
        android:layout_marginRight="24dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/viewpage_guide_3"
        android:visibility="gone" />

    <View
        android:id="@+id/split_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imv_content_image"
        android:layout_marginTop="12dp"
        android:background="@color/split_line" />

</RelativeLayout>