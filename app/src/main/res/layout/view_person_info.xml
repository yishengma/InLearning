<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_click"
    android:clickable="true"
    android:id="@+id/root_view"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_person_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:text="清除缓存"
        android:textColor="@color/textBlack"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_person_content"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/imv_arrow"
        android:text="此方法"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imv_person_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@+id/imv_arrow" />

    <TextView
        android:id="@+id/imv_person_text"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:textSize="20sp"
        android:text="下面"
        android:textColor="@color/White"
        android:typeface="serif"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/imv_arrow" />

    <ImageView
        android:id="@+id/imv_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:src="@drawable/imv_mine_arrow_left" />
</RelativeLayout>