<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_white_panel"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:hint="评论"
        android:textColorHint="@color/app_global_hint">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingTop="10dp"
            android:textColor="@color/textBlack"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/split_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="24dp"
        android:text="图片"
        android:textColor="@color/app_global_hint" />

    <FrameLayout
        android:id="@+id/view_comment_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imv_comment_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/viewpage_guide_3"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imv_image_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginTop="34dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/button_clearing" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_add_image"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="+" />

    <TextView
        android:id="@+id/tv_send_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_edit_blue_shape"
        android:gravity="center"
        android:text="发表评论"
        android:textColor="@color/White"
        android:textSize="14sp" />
</LinearLayout>