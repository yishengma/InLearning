<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/bg_item_click"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="计算机科学与技术"
        android:textColor="@color/textBlack"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_course_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_course_name"
        android:layout_marginTop="5dp"
        android:text="1019月第二学期"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_course_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_course_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_course_time"
        android:text="专业课"
        android:textSize="14sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_teacher_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_course_time"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_common_image" />

    <TextView
        android:id="@+id/imv_teacher_text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_course_time"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:textSize="12sp"
        android:text="下面"
        android:textColor="@color/White"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_course_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imv_teacher_icon"
        android:text="专业课"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_teacher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_teacher_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imv_teacher_icon"
        android:text="講師"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_student_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_teacher_icon"
        android:layout_marginTop="15dp"
        android:text="1019月第二学期"
        android:textSize="14sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imv_course_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/tv_course_name"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_common_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/split_line" />
</RelativeLayout>
