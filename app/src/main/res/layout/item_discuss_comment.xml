<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_click">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_user_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/icon_common_image" />

    <TextView
        android:id="@+id/imv_user_text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textSize="12sp"
        android:text="下面"
        android:textColor="@color/White"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imv_user_image"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/imv_user_image"
        android:text="隋东风"
        android:textColor="@color/app_global_blue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_below="@+id/imv_content_image"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:text="删除"
        android:clickable="true"
        android:textColor="@color/app_global_blue"
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@+id/imv_user_image"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="佳品隋东风阿斯顿风口浪尖了健康疗法；看来发动机阿克琉斯；打飞机克拉克的；解放啦圣诞快乐肌肤"
        android:textColor="@color/textBlack"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imv_content_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tv_comment_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@+id/imv_user_image"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_common_image"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_delete"
        android:layout_marginTop="5dp"
        android:background="@color/split_line" />

</RelativeLayout>