<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/bg_item_click"
    android:clickable="true"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/btn_select1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/bg_rbtn_selector"
        android:buttonTint="@color/app_global_blue"
        android:visibility="gone" />
    <!--    <android.support.v7.widget.CardView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="140dp"-->
    <!--        android:layout_marginStart="10dp"-->
    <!--        android:layout_marginTop="6dp"-->
    <!--        android:layout_marginEnd="10dp"-->
    <!--        android:layout_marginBottom="6dp"-->
    <!--        app:cardElevation ="5dp"-->
    <!--        app:cardCornerRadius="5dp">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/btn_select1">

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view_teacher"
            android:text="计算机科学与技术"
            android:textColor="@color/textBlack"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_name"
            android:layout_marginTop="5dp"
            android:text="1019月第二学期"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_course_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_course_time"
            android:text="专业课"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_course_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_type"
            android:layout_marginTop="15dp"
            android:text="1019月第二学期"
            android:textSize="14sp" />


        <View
            android:id="@+id/h_divide"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/app_global_item_divide" />

        <RelativeLayout
            android:id="@+id/view_teacher"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/h_divide"
            android:background="@drawable/bg_item_click">

            <CheckBox
                android:id="@+id/btn_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/bg_rbtn_selector"
                android:buttonTint="@color/app_global_blue"
                android:visibility="gone" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/course_teacher_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/btn_select"
                android:src="@drawable/viewpage_guide_3" />

            <TextView
                android:id="@+id/director_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/course_teacher_icon"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/course_teacher_icon"
                android:text="马小生"
                android:textColor="@color/textBlack"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/director_teacher_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/course_teacher_icon"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/director_teacher_name"
                android:text=" 教授"
                android:textColor="@color/textBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/director_teacher_job_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/director_teacher_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/course_teacher_icon"
                android:text="31156454562"
                android:textColor="#777777"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignLeft="@+id/director_teacher_name"
                android:layout_alignParentBottom="true"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:gravity="center"
                android:text="点击安排教师"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/app_global_item_divide" />

    <!--    </android.support.v7.widget.CardView>-->
</RelativeLayout>